<h2>記事の変更</h2>

<%= form_for @memo, url: memo_path(@memo) do |f| %>

<p>
    <%= f.text_field :title, placeholder: 'enter title'%>
    <%if @memo.errors.messages[:title].any? %>
        <span class="error"><%= @memo.errors.messages[:title][0]%>
    <% end %>
</p>
<p>
    <%= f.text_area :body, placeholder: 'enter body text'%>
    <%if @memo.errors.messages[:body].any? %>
        <span class="error"><%= @memo.errors.messages[:body][0]%>
    <% end %>
</p>
<p>
   <%= f.submit %> 
</p>
<% end %>